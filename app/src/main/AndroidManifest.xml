<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.llu17.youngq.data_collection">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Keep alive. -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bu"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.llu17.youngq.data_collection.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.llu17.youngq.data_collection.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.llu17.youngq.data_collection.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.llu17.youngq.data_collection.MainActivity" />
        </activity>
        <service android:name="com.llu17.youngq.data_collection.CollectorService" />
        <service android:name="com.llu17.youngq.data_collection.Activity_Tracker" />
        <service android:name="com.llu17.youngq.data_collection.HandleActivity" />
        <service android:name="com.llu17.youngq.data_collection.UploadService" />
        <service android:name="com.llu17.youngq.data_collection.UploadServiceM" />

    </application>

</manifest>